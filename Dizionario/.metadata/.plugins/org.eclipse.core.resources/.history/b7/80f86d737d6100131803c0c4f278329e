package utils;

import javax.swing.JMenu;
import javax.swing.JMenuBar;
import javax.swing.JMenuItem;

public class Menu {
	public static void setMenu(){
		
			JMenuBar menuBar = new JMenuBar();
			JMenu dizionario = new JMenu("File");
			JMenu strumenti = new JMenu("Strumenti");
			JMenuItem dizionarioItem = new JMenuItem("Carica Dizionario");
			JMenuItem selezionaItem = new JMenuItem("Seleziona traduzione");
			dizionario.add(dizionarioItem);
			dizionario.add(selezionaItem);
			JMenuItem traduci = new JMenuItem("Traduci");
			JMenuItem lingua = new JMenuItem("Seleziona lingua");
			strumenti.add(traduci);
			strumenti.add(lingua);
			menuBar.add(dizionario);
			menuBar.add(strumenti);
		}
	
}
