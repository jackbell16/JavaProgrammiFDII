package utils;

import java.util.ArrayList;

public class CassaPaninoteca {
	private static double costoMenuFisso = 8;
	private MenuPrezzoFisso data = new MenuPrezzoFisso(new ArrayList<>(),
			new ArrayList<>(), 0);
	public double calcolaConto(){
		data.totale=0;
		if(verificaMenuPrezzoFisso()){
			applicaMenuPrezzoFisso();
		}else{
			calcolaPrezzoPanini();
			calcolaPrezzoBibite();
		}
		data.paniniMangiati.clear();
		data.bibitaBevute.clear();
		return data.totale;
	}
	public void aggiungiPanini(Panino panino, int quantità){
		for (int i = 0; i < quantità; i++) {
			data.paniniMangiati.add(panino);
		}
	}
	public void aggiungiBibite(Bibita bibita, int quantità){
		for (int i = 0; i < quantità; i++) {
			data.bibitaBevute.add(bibita);
		}
	}
	
	private void calcolaPrezzoPanini(){
		for (int i = 0; i < data.paniniMangiati.size(); i++) {
			data.totale+=data.paniniMangiati.get(i).getPrezzo();
		}
	}
	
	private void calcolaPrezzoBibite(){
		for (int i = 0; i < data.bibitaBevute.size(); i++) {
			data.totale+=data.bibitaBevute.get(i).getPrezzo();
		}
	}
	private void applicaMenuPrezzoFisso(){
		data.totale = costoMenuFisso;
	}
	
	private boolean verificaMenuPrezzoFisso(){
		if(data.paniniMangiati.size()==1 && data.bibitaBevute.size()==1){
			return true;
		}else{
			return false;
		}
	}	
}	
